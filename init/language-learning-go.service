[Unit]
Description=language-learning-go service
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=1
User=web
Environment=HTTP_PORT=443
Environment=TLS_CERT_PATH=/home/web/certs/spanish-danstutzman-com.cert.pem
Environment=TLS_KEY_PATH=/home/web/certs/spanish-danstutzman-com.key.pem
WorkingDirectory=/home/web/gopath/src/bitbucket.org/danstutzman/language-learning-go
ExecStart=/home/web/gopath/bin/language-learning-go

[Install]
WantedBy=multi-user.target
